CREATE DATABASE IF NOT EXISTS blood_bank;
USE blood_bank;
CREATE TABLE IF NOT EXISTS donors (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100),
    blood_group VARCHAR(10),
    contact_number VARCHAR(15),
    email VARCHAR(100)
);
CREATE TABLE IF NOT EXISTS requests (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100),
    blood_group VARCHAR(10),
    contact_number VARCHAR(15),
    required_date DATE
);